<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Lista de Usuarios</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <h1 id="lista">Lista de Usuarios</h1>
    <% if (lista && lista.length> 0) { %>
        <button id="crearUsuario"><a href="/crearU">Crear Nuevo Usuario</a></button>
        <table>
            <tr>
                <th>ID</th>
                <th>Rol</th>
                <th>Cuenta</th>
                <th>Contraseña</th>
                <th>Imágen</th>
                <th>Operaciones</th>

            </tr>
            <% lista.forEach(usuario=> { %>
                <tr>
                    <td>
                        <%= usuario.id %>
                    </td>
                    <td>
                        <%= usuario.nombre_mostrar %>
                    </td>
                    <td>
                        <%= usuario.nombre_usuario %>
                    </td>
                    <td>
                        <%= usuario.clave %>
                    </td>
                    <td>
                        <img id="iconUsuario" src="/imagenes/<%= usuario.foto_perfil %>" alt="Foto de perfil">
                    </td>
                    <td>
                        <button><a href="/edit/<%= usuario.id %>">Editar</a></button>
                        <!--<button><a href="/eliminar/<%= usuario.id %>" onclick="return confirm('¿Estás seguro de querer eliminar este usuario?');">Eliminar</a></button>-->
                        <form action="/eliminar/<%= usuario.id %>" method="post"
                            onsubmit="return confirm('¿Estás seguro de que quieres eliminar este usuario?');">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </table>
        <% } else { %>
            <p>No hay usuarios para mostrar.</p>
            <% } %>
</body>
</html>