<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Resultados de Búsqueda</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/resultados.css">
</head>
<body>
    <h1>Resultados de la Búsqueda</h1>
    <% if (listaHistorial && listaHistorial.length > 0) { %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Paciente</th>
                    <th>Fecha de Visita</th>
                    <th>Fecha Próxima Visita</th>
                    <th>Presión Arterial</th>
                    <th>Diagnóstico</th>
                    <th>Medicamento</th>
                    <th>Cantidad</th>
                    <th>Dosis</th>
                </tr>
            </thead>
            <tbody>
                <% listaHistorial.forEach(historial => { %>
                    <tr>
                        <td><%= historial.nombre_paciente %></td>
                        <td><%= historial.fecha_visita %></td>
                        <td><%= historial.fecha_proxima_visita %></td>
                        <td><%= historial.presion_arterial %></td>
                        <td><%= historial.enfermedad %></td>
                        <td><%= historial.nombre_medicamento %></td>
                        <td><%= historial.cantidad %></td>
                        <td><%= historial.dosis %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No se encontraron resultados.</p>
    <% } %>
    <button onclick="imprimirHistorial()">Imprimir Historial</button>
    <button><a href="/index">Regresar</a></button>
    <script>
        function imprimirHistorial() {
            window.print();
        }
    </script>
</body>
</html>
